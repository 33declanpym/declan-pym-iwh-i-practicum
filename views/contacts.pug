doctype html
html
  head
    title Home page
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 Pets
  
    table
      thead
        tr
          th Name
          th Type
          th Location
      tbody
        each contact in data
          tr
            td #{contact.plant_name}
            td #{contact.plant_type}
            td #{contact.plant_location}

    a(href="/update-cobj") Add to this table